<?xml version="1.0" encoding="UTF-8"?>
<c3p0-config>
    <default-config>
        <property name="driverClass">com.mysql.jdbc.Driver</property>//连接数据库驱动
        <property name="jdbcUrl">jdbc:mysql://localhost:3306/test?characterEncoding=utf-8</property>//数据库类型和地址以及编码
        <property name="user">root</property>//数据库用户帐号
        <property name="password">1234</property>//密码
        <property name="maxPoolSize">40</property>//最大连接数
        <property name="minPoolSize">5</property>//最小连接数
        <property name="initialPoolSize">10</property>//初始连接数
        <property name="maxIdleTime">10</property>//最大连接时间
    </default-config>
</c3p0-config>
